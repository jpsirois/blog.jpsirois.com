<body>
<div class="wrapper">
  <div class="blog">

      <div id="menu" class="menu-top">
        <div class="blog-info">
          <h1><a href="{{home_link}}">{{author}}</a></h1>
          <div class="blog-description">
           <h2>{{blog_title}}</h2>
          </div>
         </div>
         <div class="pages">
          {{#pages}}
            <a href="{{permalink}}">{{title}}</a>
          {{/pages}}
        </div>
      </div>

      <div class="container">
      {{#posts}}
        <!-- first post -->
        {{#first}}
         <div class="post">
            <div class="content">
            <div class="date">{{prettydate}}</div>
            <div class="title"><h2><a href="{{permalink}}">{{title}}</a> {{#post_permalink}}<a href="{{post_permalink}}">#</a>{{/post_permalink}}</h2></div>
            <div class="body-post">
              <!--if excerpt-->
              {{#excerpt}}<span class="introduction">{{excerpt}}</span>{{/excerpt}}
              <!--endif-->
              {{content}}
              <!-- if tags -->
              {{#if_tags}}
              <ul class="tags">
                {{#tags}}
                  <li><a href="{{base_url}}/tag/{{name}}">{{name}}</a></li>
                {{/tags}}
              </ul>
              {{/if_tags}}
              <!-- endif -->
              <!-- social buttons -->
               <div class="share-buttons">
                <div class="share-twitter">
                  <a href="https://twitter.com/share" class="twitter-share-button" data-url="{{permalink}}" data-via="scriptogram" data-lang="fr">Tweet</a><script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
                 </div>
                <div class="share-gplus">
                  <g:plusone size="medium" href="{{permalink}}"></g:plusone>
                 </div>
                <div class="share-facebook">
                  <div class="fb-like" data-href="{{permalink}}" data-send="false" data-layout="button_count" data-width="50" data-show-faces="false" data-font="arial"></div>
                </div>
               </div>
            </div><!--end body-->
          </div><!--end content-->
          <div class="clear"></div>
        </div><!--end post-->
        <p class="previous-articles">Articles précédents</p>
       {{/first}}
       <!-- end first post -->
       <!-- index and not first -->
       {{^first}}
       {{#is_index}}
        <div class="post">
          <div class="archive-content">
            <div class="archive-date">{{prettydate}}</div>
            <div class="archive-title"><h3><a href="{{permalink}}">{{title}}</a> {{#post_permalink}}<a href="{{post_permalink}}">#</a>{{/post_permalink}}</h2></h3></div>
          </div><!--end archive-content-->
          <div class="clear"></div>
        </div>
      {{/is_index}}
      {{/first}}

      <!-- post permalink -->
      {{#is_post}}
         <div class="post">
            <div class="content">
            <div class="date">{{prettydate}}</div>
            <div class="title"><h2><a href="{{permalink}}">{{title}}</a> {{#post_permalink}}<a href="{{post_permalink}}">#</a>{{/post_permalink}}</h2></div>
            <div class="body-post">
              <!--if excerpt-->
              {{#excerpt}}<span class="introduction">{{excerpt}}</span>{{/excerpt}}
              <!--endif-->
              {{content}}
              <!-- if tags -->
              {{#if_tags}}
              <ul class="tags">
                {{#tags}}
                  <li><a href="{{base_url}}/tag/{{name}}">{{name}}</a></li>
                {{/tags}}
              </ul>
              {{/if_tags}}
              <!-- endif -->
               <!-- social buttons -->
               <div class="share-buttons">
                <div class="share-twitter">
                  <a href="https://twitter.com/share" class="twitter-share-button" data-url="{{permalink}}" data-via="scriptogram" data-lang="fr">Tweeter</a><script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
                 </div>
                <div class="share-gplus">
                  <g:plusone size="medium" href="{{permalink}}"></g:plusone>
                </div>
                <div class="share-facebook">
                  <div class="fb-like" data-href="{{permalink}}" data-send="false" data-layout="button_count" data-width="50" data-show-faces="false" data-font="arial"></div>
                </div>
               </div>
           </div><!--end body-->
          </div><!--end content-->
          <div class="clear"></div>
        </div><!--end post-->
        <p class="previous-articles"><a href="http://blog.jpsirois.com/archive">Plus d’articles</p>
      {{/is_post}}
      <!-- endif -->

      <!-- page permalink -->
      {{#is_page}}
          <div class="post">
           <div class="content">
            <div class="date"></div>
            <div class="title"><h2><a href="{{permalink}}">{{title}}</a> {{#post_permalink}}<a href="{{post_permalink}}">#</a>{{/post_permalink}}</h2></div>
            <div class="body-post">
              <!--if excerpt-->
              {{#excerpt}}<span class="introduction">{{excerpt}}</span>{{/excerpt}}
              <!--endif-->
              {{content}}
              <!-- if tags -->
              {{#if_tags}}
              <ul class="tags">
                {{#tags}}
                  <li><a href="{{base_url}}/tag/{{name}}">{{name}}</a></li>
                {{/tags}}
              </ul>
              {{/if_tags}}
              <!-- endif -->
            </div><!--end body-->
          </div><!--end content-->
          <div class="clear"></div>
        </div><!--end post-->
      {{/is_page}}
      <!-- endif -->

      <!-- archive -->
      {{#is_archive}}
        <div class="post">
          <div class="archive-content">
            <div class="archive-date">{{prettydate}}</div>
            <div class="archive-title"><h3><a href="{{permalink}}">{{title}}</a></h3></div>
          </div><!--end archive-content-->
          <div class="clear"></div>
        </div>
      {{/is_archive}}

    {{/posts}}
    <div class="pagination">{{pagination}}</div>
    </div><!-- end container -->
  </div><!-- end blog -->
</div><!-- end wrapper -->
